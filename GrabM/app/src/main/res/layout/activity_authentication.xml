<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fullscreen_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_background"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context="com.earcs.grabm.AuthenticationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/twitterLogin"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_twitter"
            android:paddingBottom="@dimen/margin_50dp"
            android:paddingTop="@dimen/margin_50dp"
            android:text="@string/twitterLogin"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/googleLogin"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_google"
            android:paddingBottom="@dimen/margin_50dp"
            android:paddingTop="@dimen/margin_50dp"
            android:text="@string/googleLogin"
            android:textColor="@android:color/white" />
    </LinearLayout>
</RelativeLayout>
