<div class="container-fluid">
    <div class="">
        <div class="col-sm-8">
            <div class="row">
                <div class="tst-color-1">

                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="row login-wrapper">
                <div class="col-lg-12">
                    <div class="row login-header-wrapper">
                        <div class="col-md-6">
                            <img src="/grabmd/images/icn/taxi.png" style="margin-right: 20px"> 
                        </div>
                        <div class="col-md-6">
                            <span class="pull-right">GRABM LOGIN</span>
                        </div>
                    </div>
                    <div class="row login-form-wrapper">
                        <!--Adding login form-->
                        <div class="login-form">
                            <form role="form" method="">
                                <div class="form-group">
                                    <input type="text" class="form-control" id="l-username" name="un" autocomplete="off" placeholder="Enter User Name">
                                </div>

                                <div class="form-group">
                                    <input type="password" class="form-control" id="l-password" name="pw" autocomplete="off" placeholder="Enter Password">
                                </div>

                                <div class="form-group">
                                    <div class="">
                                        <span><button  type="button" class="btn-override btn-green1">Sign in</button></span>
                                    </div>
                                </div>
                            </form>
                            <div>
                                <span><a href="#" class="txt-light-gray">Forgot your password ?</a></span>
                            </div>
                        </div>

                        <!--adding reset password form-->

                        <div class="hidden password-reset-form">
                            <form role="form" method="">

                                <p class="txt-light-gray">
                                    Please submit the registered email address. Once you submit, we'll send you a email. please follow the instructions as mentioned in email.
                                </p>

                                <div class="form-group">
                                    <input type="text" class="form-control" id="r-username" name="un" autocomplete="off" placeholder="Enter Email Address">
                                </div>

                                <div class="form-group">
                                    <div class="">
                                        <span><button  type="button" class="btn-override btn-green1">Submit</button></span>
                                    </div>
                                </div>

                            </form>

                        </div>
                    </div>

                </div>

            </div>

        </div>

    </div>
</div>
