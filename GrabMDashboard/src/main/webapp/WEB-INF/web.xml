<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">   
    
    <servlet>
        <servlet-name>index</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>dash-console-user</servlet-name>
        <jsp-file>/dash-console-user/index.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>admin</servlet-name>
        <jsp-file>/admin/index.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>admin-activate-account</servlet-name>
        <jsp-file>/admin/confirm-account/index.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>user</servlet-name>
        <jsp-file>/user/index.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>vehicle</servlet-name>
        <jsp-file>/vehicle/index.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>vehicle-detail</servlet-name>
        <jsp-file>/vehicle/vehicle-detail/index.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>driver</servlet-name>
        <jsp-file>/driver/index.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>profile</servlet-name>
        <jsp-file>/profile/index.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>ui-profile-registry</servlet-name>
        <jsp-file>/ui-profile-registry/index.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>live-tracking</servlet-name>
        <jsp-file>/tracker/index.jsp</jsp-file>
    </servlet>
    
    <!--schedule-->
    <servlet>
        <servlet-name>schedule-pick-up</servlet-name>
        <jsp-file>/schedule/pickup-schedule/index.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>schedule-pickup-update</servlet-name>
        <jsp-file>/schedule/pickup-schedule-update/index.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>schedule-drop-off</servlet-name>
        <jsp-file>/schedule/dropoff-schedule/index.jsp</jsp-file>
    </servlet>
    
    <!-- Mappings -->
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>dash-console-user</servlet-name>
        <url-pattern>/user-dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>admin</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>admin-activate-account</servlet-name>
        <url-pattern>/admin-activate-account</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/flight-crew</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>vehicle</servlet-name>
        <url-pattern>/vehicle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>vehicle-detail</servlet-name>
        <url-pattern>/vehicle-detail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>driver</servlet-name>
        <url-pattern>/driver</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>profile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ui-profile-registry</servlet-name>
        <url-pattern>/ui-profile-registry</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>live-tracking</servlet-name>
        <url-pattern>/live-tracking</url-pattern>
    </servlet-mapping>
    <!--schedule-->
    <servlet-mapping>
        <servlet-name>schedule-pick-up</servlet-name>
        <url-pattern>/schedule-pick-up</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>schedule-pickup-update</servlet-name>
        <url-pattern>/schedule-pickup-update</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>schedule-drop-off</servlet-name>
        <url-pattern>/schedule-drop-off</url-pattern>
    </servlet-mapping>
    
    <!--<error-page>
        <error-code>404</error-code>
        <location>/url</location>
    </error-page>-->
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
